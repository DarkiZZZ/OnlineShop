<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/category_item_parent_height"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/category_item_image_width"
        android:layout_height="@dimen/category_item_image_height"
        tools:src="@drawable/ic_cars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/category_icon_desc" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="@dimen/category_item_text_width"
        android:layout_height="@dimen/category_item_text_height"
        android:gravity="center"
        android:layout_marginTop="@dimen/category_item_margin_top_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        style="@style/TextAppearance.OnlineShop.CategoryName"
        tools:text="@string/headphones" />

</androidx.constraintlayout.widget.ConstraintLayout>